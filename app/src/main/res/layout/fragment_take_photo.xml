<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.tianlunte.wangqytest.views.MyCameraPreView
        android:id="@+id/take_photo_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/take_photo_btn_take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_host_camera_normal"/>

    <ImageView
        android:id="@+id/take_photo_result_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/take_photo_send_photo"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:text="发送"
        android:visibility="gone"/>

</RelativeLayout>